<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        android:layout_marginRight="@dimen/spacing_larger_72"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="@dimen/spacing_small_8"
            android:layout_height="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_medium_28"
            android:background="@color/red">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginBottom="@dimen/spacing_medium_28"
            android:background="@color/white">

            <TextView
                android:id="@+id/enter_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_medium_28"
                android:text="ВОЙТИ"
                android:gravity="center_vertical"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_72"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="E-mail"
                    android:id="@+id/textView"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:text="Softdesign@mail.ru"
                    android:textStyle="normal"
                    android:password="false" />
            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:hint="Пароль"
                android:password="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_small_32"
                android:text="ВОЙТИ"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_medium_28"
                android:layout_marginLeft="@dimen/spacing_medium_28"
                android:layout_marginRight="@dimen/spacing_medium_28"
                android:textColor="@color/white"
                android:background="@color/red"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Забыли пароль?"
                android:gravity="center"
                android:textColor="@color/grey_light"
                android:layout_marginTop="@dimen/spacing_normal_16"/>


        </LinearLayout>





    </LinearLayout>

</LinearLayout>