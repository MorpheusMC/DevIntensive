<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_coordinator_container">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/userphoto"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>


        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:background="@color/grey">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_medium_48"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/size_small_24">

                        <TextView
                            android:text="5"
                            android:id="@+id/value1_tv"
                            android:textSize="@dimen/text_size_large_22"
                            style="@style/top_tv" />

                        <TextView
                            style="@style/top_tv"
                            android:id="@+id/name1_tv"
                            android:text="Рейтинг"
                            android:fontFamily="sans-serif-condensed" />

                    </LinearLayout>

                    <View style="@style/vertical_line_v" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_medium_48"
                        android:layout_marginTop="@dimen/size_small_24"
                        android:layout_marginBottom="@dimen/size_small_24"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            style="@style/top_tv"
                            android:id="@+id/value2_tv"
                            android:text="25000"
                            android:textSize="@dimen/text_size_large_22" />

                        <TextView
                            style="@style/top_tv"
                            android:id="@+id/name2_tv"
                            android:text="Написано строк кода"
                            android:fontFamily="sans-serif-condensed" />

                    </LinearLayout>

                    <View style="@style/vertical_line_v" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_medium_48"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/size_small_24"
                        android:layout_marginBottom="@dimen/size_small_24">

                        <TextView
                            style="@style/top_tv"
                            android:id="@+id/value3_tv"
                            android:text="5"
                            android:textSize="@dimen/text_size_large_22" />

                        <TextView
                            style="@style/top_tv"
                            android:id="@+id/name3_tv"
                            android:text="Проектов"
                            android:fontFamily="sans-serif-condensed" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                android:inputType="phone"
                                android:hint="Мобильный"
                                android:text="+79170000000"
                                style="@style/data_field_et" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_24dp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/size_large_72" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/data_field_et"
                                android:id="@+id/email_et"
                                android:inputType="textEmailAddress"
                                android:hint="E-mail"
                                android:text="morpheus@mail.ru" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/size_large_72" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/vk_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textWebEditText"
                                android:hint="Профиль в ВК"
                                android:text="vk.com/morpheusmc"
                                android:fontFamily="sans-serif-condensed"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_24dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/size_large_72" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/git_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textWebEditText"
                                android:hint="Репозиторий"
                                android:text="github.com/morpheusmc/DevIntensive"
                                android:fontFamily="sans-serif-condensed"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_24dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/size_large_72" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/about_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:hint="О себе"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sed leo et magna pharetra condimentum. Proin interdum vel eros eu egestas. Proin maximus, tellus vel porta placerat, massa magnaLorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sed leo et magna pharetra condimentum. Proin interdum vel eros eu egestas. Proin maximus, tellus vel porta placerat, massa magna"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>